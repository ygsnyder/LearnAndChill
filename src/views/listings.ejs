<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8'>
        <meta name="viewport" content="width=device-width, maximum-scale=1.0">
        <title>Learn&Chill</title>
        <link rel='stylesheet' type='text/css' href='/stylesheets/main/main.css'>
        <link rel='stylesheet' type='text/css' href='/stylesheets/pages/_listings.css'>
        <script src='/stylesheets/scripts/styleScript.js' defer></script>
    </head>
    
    <body>
        <%- include('./partials/navigation.ejs') %>

        <section class='container'>
            <div class='container__splitAside'>
                <div class='container__splitAside_left'>
                    <nav class='rsvp__navigation'> <!-- turn into sidebar-->
                        <button onclick="window.location.href='/auth/RSVPed'"> RSVPed </button>
                    </nav>
                </div>
                <div class='container__splitAside_right'>
                    <div class='container__content_1'>
                        <% if (list) { %>
                        <div>
                            <h2>Do it yourself</h2>
                            <% list.forEach(function(obj){
                                if(obj.topic === 'diy') { %>
                                    <article id='events-${obj.topic}'>
                                        <div>
                                            <h3><a href="/public/listingDetails/<%= obj._id %>"><%= obj.title %></a></h3>
                                            <h3><%= obj.eventDescription %></h3>
                                            <p><%= new Date(obj.date).toDateString() %></p>
                                            <p><%= obj.time %></p>
                                            <p><%= obj.address %></p>
                                            <img src='http://localhost:3000/public/images/<%= obj._id %>' height=200px width=200px>
                                        </div>
                                    </article> 
                               <% }
                            }) %>
                        </div>
                        <div>
                            <h2>Food</h2>
                            <% list.forEach(function(obj){
                                if(obj.topic === 'food') { %>
                                    <article id='events-${obj.topic}'>
                                        <div>
                                            <h3><a href="/public/listingDetails/<%= obj._id %>"><%= obj.title %></a></h3>
                                            <h3><%= obj.eventDescription %></h3>
                                            <p><%= new Date(obj.date).toDateString() %></p>
                                            <p><%= obj.time %></p>
                                            <p><%= obj.address %></p>
                                            <img src='http://localhost:3000/public/images/<%= obj._id %>' height=200px width=200px>
                                        </div>
                                    </article> 
                               <% }
                            }) %>
                        </div>
                        <div>
                            <h2>Drink</h2>
                            <% list.forEach(function(obj){
                                if(obj.topic === 'drink') { %>
                                    <article id='events-${obj.topic}'>
                                        <div>
                                            <h3><a href="/public/listingDetails/<%= obj._id %>"><%= obj.title %></a></h3>
                                            <h3><%= obj.eventDescription %></h3>
                                            <p><%= new Date(obj.date).toDateString() %></p>
                                            <p><%= obj.time %></p>
                                            <p><%= obj.address %></p>
                                            <img src='http://localhost:3000/public/images/<%= obj._id %>' height=200px width=200px>
                                        </div>
                                    </article> 
                               <% }
                            }) %>
                        </div>
                        <div>
                            <h2>Crafts</h2>
                            <% list.forEach(function(obj){
                                if(obj.topic === 'crafts') { %>
                                    <article id='events-${obj.topic}'>
                                        <div>
                                            <h3><a href="/public/listingDetails/<%= obj._id %>"><%= obj.title %></a></h3>
                                            <h3><%= obj.eventDescription %></h3>
                                            <p><%= new Date(obj.date).toDateString() %></p>
                                            <p><%= obj.time %></p>
                                            <p><%= obj.address %></p>
                                            <img src='http://localhost:3000/public/images/<%= obj._id %>' height=200px width=200px>
                                        </div>
                                    </article> 
                               <% }
                            }) %>
                        </div>
                        <% } %>
                    </div>
                    <div class='container__content_2'></div>
                    <div class='container__content_3'></div>
                </div>
            </div>
        </section>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>