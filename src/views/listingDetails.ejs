<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8'>
        <meta name="viewport" content="width=device-width, maximum-scale=1.0">
        <title>Learn&Chill</title>
        <link rel='stylesheet' type='text/css' href='/stylesheets/main/main.css'>
        <link rel='stylesheet' type='text/css' href='/stylesheets/pages/_listingDetails.css'>
        <script src='/stylesheets/scripts/styleScript.js' defer></script>
    </head>
    
    <body>
        <%- include('./partials/navigation.ejs') %>


        <section class='container'>
            <div class='container__content_1'>
                    <article id='details'>
                        <div id='details__description'>
                            <h3><%= event._name %></h3>
                            <p><%= event._details %></p>
                        </div>
                        <div id='details__additionalInfo'> 
                            <div><h3> Acommodates </h3><p>5 people</p></div>
                            <div><h3> Address </h3><p><%= event._location %></p></div>
                            <div><h3> Date & Time</h3><p><%= event._date %></p><p><%= event._time %></p></div>
                        </div>
                    </article>
            </div>
            <div class='container__content_2'>
                <a id='button_going' href='/auth/post/going'>Going</a>
                <a id='button_interested' href='/auth/post/interested'>Interested</a>
                <a id='button_notGoing' href='/auth/post/notgoing'>Not Going</a>
            </div>
            <div class='container__content_3'>
                <div class='container__content_3_image'>
                    <img alt="wine lamps" src=<%= `/images/${event._image}` %>>
                    <img alt="wine lamps" src=<%= `/images/${event._image}` %>>
