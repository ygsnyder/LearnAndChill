                    <img alt="wine lamps" src=<%= `/images/${event._image}` %>>
                    <img alt="wine lamps" src=<%= `/images/${event._image}` %>>
                    <img alt="wine lamps" src=<%= `/images/${event._image}` %>>
                    <img alt="wine lamps" src=<%= `/images/${event._image}` %>>
                </div>                
            </div>
        </section>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>