<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8'>
        <meta name="viewport" content="width=device-width, maximum-scale=1.0">
        <title>Learn&Chill</title>
        <link rel='stylesheet' type='text/css' href='/stylesheets/main/main.css'>
        <link rel='stylesheet' type='text/css' href='/stylesheets/pages/_listingDetails.css'>
        <script src='/stylesheets/scripts/styleScript.js' defer></script>
    </head>
    
    <body>
        <%- include('./partials/navigation.ejs') %>


        <section class='container'>
            <div class='container__content_1'>
                    <article id='details'>
                        <div id='details__description'>
                            <% console.log(event) %>
                            <h3><%= event.title %></h3>
                            <p><%= event.eventDescription %></p>
                        </div>
                        <div id='details__additionalInfo'> 
                            <div><h3> Acommodates </h3><p><%= event.maxPersons %> people</p></div>
                            <div><h3> Address </h3><p><%= event.address %></p></div>
                            <div><h3> Date & Time</h3><p><%= new Date(event.date).toDateString() %></p><p><%= event.time %></p></div>
                        </div>
                    </article>
            </div>
            <div class='container__content_2'>
                <a id='button_going' href=<%=`/auth/post/going/${event._id}`%>>Going</a>
                <a id='button_interested' href=<%=`/auth/post/interested/${event._id}`%>>Interested</a>
                <a id='button_notGoing' href=<%=`/auth/post/notgoing/${event._id}`%>>Not Going</a>
            </div>
            <div class='container__content_3'>
                <div class='container__content_3_image'>
                   <img src='http://localhost:3000/public/images/<%= event._id %>' >
                </div>                
            </div>
        </section>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>